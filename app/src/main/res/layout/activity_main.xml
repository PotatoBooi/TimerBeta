<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.531">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >


            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonPlus1" android:layout_weight="1"
                    android:onClick="onClick"/>
            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonPlus2" android:layout_weight="1"
                    android:onClick="onClick"/>
            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonPlus3" android:layout_weight="1"
                    android:onClick="onClick"/>
            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonPlus4" android:layout_weight="1"
                    android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">


            <TextView
                    android:layout_marginHorizontal="15dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewMinutesDec" android:layout_weight="1"
                    android:textSize="40sp"
                    android:textAlignment="center"/>
            <TextView
                    android:layout_marginLeft="25dp"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewMinutes" android:layout_weight="1"
            />
            <TextView

                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"/>
            <TextView
                    android:layout_marginRight="25dp"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewSecondsDec"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_marginHorizontal="15dp"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewSeconds" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">


            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonMinus1" android:layout_weight="1"
                    android:onClick="onClick"/>
            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonMinus2" android:layout_weight="1"
                    android:onClick="onClick"/>
            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonMinus3" android:layout_weight="1"
                    android:onClick="onClick"/>
            <Button
                    android:layout_marginHorizontal="15dp"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonMinus4" android:layout_weight="1"
                    android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="Start"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonStart" android:layout_weight="1"/>
            <Button
                    android:text="Stop"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonStop" android:layout_weight="1"/>
            <Button
                    android:text="Pause"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonPause" android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>